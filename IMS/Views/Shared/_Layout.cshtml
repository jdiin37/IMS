<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @IMS.Resources.Resource.SysTitle</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrapCustom.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script>
        function f_navMenu_toggle() {
            if ($('#navMenu').css("width") == "0px") {
                $('#navMenu').css("width", "220px");
                $('#bodyContent').css("margin-left", "220px");
            } else {
                $('#navMenu').css("width", "0px");
                $('#bodyContent').css("margin-left", "0px");
            }
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{
                    string appName = @IMS.Resources.Resource.SysTitle + "-" + @ViewBag.SubSysName;
                }

                @Html.ActionLink(appName, "Index", "main", new { area = "" }, new { @class = "navbar-brand" })

                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a style="padding:15px;" onclick="f_navMenu_toggle()"><span class="glyphicon glyphicon-resize-horizontal"></span></a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" style="width:140px">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @IMS.Resources.Resource.Welcome
                            <br />
                            aaa
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@IMS.Resources.Resource.UserSetting</a></li>
                            <li><a href="#">@IMS.Resources.Resource.ChangePassword</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">@IMS.Resources.Resource.Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    @{Html.RenderAction("NavMenu", "Main", new { area = "" });}
    <div class="body-content" id="bodyContent">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @IMS.Resources.Resource.SysTitle Create by @IMS.Resources.Resource.Creater</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>