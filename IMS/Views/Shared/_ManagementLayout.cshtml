@{
    ViewBag.Title = IMS.Resources.Resource.Model_Management;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title </title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/bootstrap.cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Home",new { area="Management"})"><span class="fa fa-files-o">&nbsp;</span>@ViewBag.Title</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" id="top_menu">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@IMS.Resources.Resource.Management_FarmData <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","Base",new { area="Management"})">@IMS.Resources.Resource.FarmData_base</a></li>
                                <li><a href="@Url.Action("Index","Land",new { area="Management"})">@IMS.Resources.Resource.FarmData_Land</a></li>
                                <li><a href="@Url.Action("Index","License",new { area="Management"})">@IMS.Resources.Resource.FarmData_License</a></li>
                                <li><a href="@Url.Action("Index","Barn",new { area="Management"})">@IMS.Resources.Resource.FarmData_Barn</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@IMS.Resources.Resource.Management_EnvironmentData <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","Abnormal",new { area="Management"})">@IMS.Resources.Resource.EnvironmentData_Abnormal</a></li>
                                <li><a href="@Url.Action("Index","Land",new { area="Management"})"><i class="fa fa-thermometer-half" aria-hidden="true">&nbsp;</i>@IMS.Resources.Resource.EnvironmentData_Temperature</a></li>
                                <li><a href="@Url.Action("Index","Humidity",new { area="Management"})">@IMS.Resources.Resource.EnvironmentData_Humidity</a></li>
                                <li><a href="@Url.Action("Index","Image",new { area="Management"})">@IMS.Resources.Resource.EnvironmentData_Image</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@IMS.Resources.Resource.Management_BaseData <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","PigChange",new { area="Management"})">@IMS.Resources.Resource.BaseData_PigChange</a></li>
                                <li><a href="@Url.Action("Index","Med",new { area="Management"})">@IMS.Resources.Resource.BaseData_Med</a></li>
                                <li><a href="@Url.Action("Index","FixedCost",new { area="Management"})">@IMS.Resources.Resource.BaseData_FixedCost</a></li>
                                <li><a href="@Url.Action("Index","Customer",new { area="Management"})">@IMS.Resources.Resource.BaseData_Customer</a></li>
                                <li><a href="@Url.Action("Index","Expenses",new { area="Management"})">@IMS.Resources.Resource.BaseData_Expenses</a></li>
                                <li><a href="@Url.Action("Index","Income",new { area="Management"})">@IMS.Resources.Resource.BaseData_Income</a></li>
                            </ul>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @{Html.RenderAction("BoxMenu", "Main", new { area = "" });}
                        @{Html.RenderAction("UserInfo", "Main", new { area = "" });}
                    </ul>
                </div>

            </div>
        </div>
    </header>

    <section class="container" id="bodyContent">
        @RenderBody()
    </section>

    <hr />
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - @IMS.Resources.Resource.SysTitle Create by @IMS.Resources.Resource.Creater</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/base.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/locales/bootstrap-datepicker.zh-TW.min.js"></script>
    <script src="~/Scripts/select2/select2.min.js"></script>

</body>
</html>
