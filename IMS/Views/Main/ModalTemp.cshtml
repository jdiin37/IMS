        <p><span id="confirmMsg">One fine body&hellip;</span></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">確認</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- delete Modal-->
