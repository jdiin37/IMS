
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.theme.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function doIt(item, baseUrl) {
            window.location.href = baseUrl + '?lang=' + item.value;
        }
    </script>
</head>
<body>
    <div class="container" style="margin-top:32px">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@IMS.Resources.Resource.SysTitle</h3>
                        <form method="post" action="@Url.Action("Login")">
                            <p>
                                <label for="account">@IMS.Resources.Resource.Account</label>
                                <input type="text" class="form-control" id="account">
                            </p>
                            <p>
                                <label for="password">@IMS.Resources.Resource.Password</label>
                                <input type="password" class="form-control" id="password">
                            </p>
                            <p>
                                <label for="langSelect">@IMS.Resources.Resource.LangSys</label>
                                <select class="form-control" id="langSelect" onchange="doIt(this,'@Url.Action("ChangeLang")')">
                                    <option value="zh-TW">繁體中文</option>
                                    <option value="en-US">English</option>
                                </select>
                                @ViewBag.langSys
                            </p>
                            <br />
                            <p>
                                <input type="submit" class="btn btn-primary" value=@IMS.Resources.Resource.Login />
                                <input type="button" class="btn btn-default" value=@IMS.Resources.Resource.Cancel onclick="location.href='@Url.Action("Index")'" />
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @IMS.Resources.Resource.SysTitle Create by @IMS.Resources.Resource.Creater</p>
        </footer>
    </div>
    
</body>
</html>
