        <div class="input-group">
          <div class="input-group-addon">
            @Html.DisplayNameFor(model => model.PigChangeCnt)

          </div>

          <select class="form-control" id="pigChangeType" name="pigChangeType">
            <option value="-1">減少</option>
            <option value="1">增加</option>
          </select>

          @Html.EditorFor(model => model.PigChangeCnt, new { htmlAttributes = new { @class = "form-control", min = "0", step = "1", @Value = "0" } })
          <span class="input-group-addon">隻</span>
        </div>
      </div>

    </div>

    @*秤重*@
    <div class="form-group InventoryTool" style="display:none;">

      <div class="col-md-6">
        <div class="input-group">
          <div class="input-group-addon">
            @Html.DisplayNameFor(model => model.InventoryPigCount)

          </div>
          @Html.EditorFor(model => model.InventoryPigCount, new { htmlAttributes = new { @class = "form-control" } })
          <span class="input-group-addon">隻</span>
        </div>
      </div>


      <div class="col-md-6">
        <div class="input-group">
          <div class="input-group-addon">
            @Html.DisplayNameFor(model => model.InventoryWeight)

          </div>
          @Html.EditorFor(model => model.InventoryWeight, new { htmlAttributes = new { @class = "form-control" } })
          <span class="input-group-addon">kg</span>
