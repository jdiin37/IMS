            @Html.DisplayNameFor(model => model.FeedType)

          </div>
          @Html.EditorFor(model => model.FeedType, new { htmlAttributes = new { @class = "form-control" } })

        </div>
      </div>


      <div class="col-md-6">
        <div class="input-group">
          <div class="input-group-addon">
            @Html.DisplayNameFor(model => model.FeedValue)
          </div>
