
@model IEnumerable<IMS.Models.FarrowingRecord>

@using (Ajax.BeginForm("_FarrowingRecord", new { pigGid = ViewBag.PigGid }, new AjaxOptions { UpdateTargetId = "farrowing-tool", HttpMethod = "Post" }))
{
    
    <div id="farrowing-tool">
        <table class="table table-bordered bg-success">
        <thead>
            <tr>
                <th rowspan="2">@IMS.Resources.Resource.BreedingDate</th>
                <th rowspan="2">@IMS.Resources.Resource.BoarNo</th>                
                <th colspan="4">生產</th>
                <th colspan="3">離乳</th>
            </tr>
            <tr>
                <th>@IMS.Resources.Resource.FarrowingDate</th>
                <th>@IMS.Resources.Resource.BornCnt</th>
                <th>@IMS.Resources.Resource.BornAliveCnt</th>
                <th>@IMS.Resources.Resource.BornDeadCnt</th>
                <th>@IMS.Resources.Resource.WeaningCnt</th>
                <th>@IMS.Resources.Resource.WeaningDate</th>
                <th>@IMS.Resources.Resource.WeaningAge</th>

            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model)
            {
                
                <tr class="text-center">
                    <td>
                        @item.BreedingDate.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.BoarNo
                    </td>
                    <td>
                        @item.FarrowingDate
                    </td>
                    <td>
                        @item.BornCnt
                    </td>
                    <td>
                        @item.BornAliveCnt
                    </td>
                    <td>
                        @item.BornDeadCnt
                    </td>
                    <td>
                        @item.WeaningCnt
                    </td>
                    <td>
                        @item.WeaningDate
                    </td>
                    <td>
                        @item.WeaningAge
                    </td>
                    <td>
                        <button type="button" class="btn btn-link " id="btnEdit01" onclick="editMod(this)">
                        <li class="fa fa-pencil-square-o"></li>
                    </button>
                    <button type="button" class="btn btn-link" id="btnSave01" onclick="noteditMod(this)">
                        <li class="fa fa-floppy-o"></li>
                    </button>
                        @*<button type="button" class="btn btn-danger"  onclick = "return confirm('確定要刪除嗎??')">
                        <li class="fa fa-remove"></li>
                    </button>*@
                        <a href="@Url.Action("DeleteRecord", new { farrowingRecordGid = item.GID, pigGid = ViewBag.PigGid })" class="btn btn-link bt" onclick="return confirm('確定要刪除嗎??')"><li class="fa fa-remove"></li></a>
                            
                        @*<button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除嗎??')"><li class="fa fa-remove"></li></button>*@
                    </td>
                </tr>
                
            }

            <tr>
                @Html.Action("_CreateAFarrowing", new { pigGid = ViewBag.PigGid })
            </tr>
        </tbody>
      </table>
        
    </div>
    
}