@model IEnumerable<IMS.Models.Category>

@{
    ViewBag.Title = IMS.Resources.Resource.CategoryMgr;
}

<h2>@IMS.Resources.Resource.CategoryMgr</h2>
<hr />
<div class="panel panel-default">
    <!-- Default panel contents -->

    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="row form-group">

                <div class="col-sm-2">
                    <label class="control-label" for="SearchString">關鍵字</label>
                    <input class="form-control" id="SearchString" name="SearchString" value=@ViewBag.CurrentFilter>
                </div>
                <div class="col-sm-10 ">
                    <br />
                    <input type="submit" value=@IMS.Resources.Resource.Comm_Search class="btn btn-success" />
                    @*@Html.ActionLink(IMS.Resources.Resource.Comm_Search, "Search", "", new { Class = "btn btn-success" })*@
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Add, "Create", "", new { Class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>

    <!-- Table -->
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

                <td>
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Edit, "Edit", new { id = item.CategoryID }, new { Class = "btn btn-success" }) |
                    @*@Html.ActionLink(IMS.Resources.Resource.Comm_Details, "Details", new { id=item.ID }, new { Class = "btn btn-info" }) |*@
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Delete, "Delete", new { id = item.CategoryID }, new { onclick = "return confirm('確定要刪除嗎??')", Class = "btn btn-danger" })
                </td>
            </tr>
        }


    </table>

    @if (Model.Count() < 1)
    {
        <div class="well well-sm" style="width:100%">
            <p class="text-center text-warning">查無資料</p>
        </div>
    }
</div>