@model IMS.ViewModels.AccountVM


@{
    ViewBag.Title = IMS.Resources.Resource.AccountMgr;
}

<h2>層級 : @ViewBag.LevelName</h2>

<p>
    @Html.ActionLink(IMS.Resources.Resource.Comm_AddAccount, "Create", "", new { Class = "btn btn-primary" })
</p>

<div class="row">
    <div class="col-sm-3">
        <div class="list-group">
            @foreach (var item in Model.accountLevels)
            {
                if (item.Level == ViewBag.Level)
                {
                    @Html.ActionLink(item.LevelName, "Index", new { level = item.Level }, new { @class = "list-group-item active" })
                }
                else
                {
                    @Html.ActionLink(item.LevelName, "Index", new { level = item.Level }, new { @class = "list-group-item" })
                }
            }
        </div>
    </div>

    <div class="col-sm-9">
        <table class="table table-striped">

            <tr>

                <th>
                    @IMS.Resources.Resource.AccountNo
                </th>
                <th>
                    @IMS.Resources.Resource.AccountName
                </th>
                <th>
                    Email
                </th>
                <th>

                </th>

            </tr>

            @foreach (var item in Model.accounts)
            {
                <tr>

                    <td>
                        @item.AccountNo
                    </td>
                    <td>
                        @item.AccountName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @Html.ActionLink(IMS.Resources.Resource.Comm_Edit, "Edit", new { seqNo = item.SeqNo }, new { Class = "btn btn-success" }) |
                        @Html.ActionLink("刪除", "Delete", new { seqNo = item.SeqNo }, new { onclick = "return confirm('確定要刪除嗎??')", @class = "btn btn-danger" })
                    </td>

                </tr>
            }
        </table>
    </div>

</div>
