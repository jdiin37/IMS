
@using PagedList.Mvc;
@model PagedList.IPagedList<IMS.Models.PigFarm>

@{
    ViewBag.Title = IMS.Resources.Resource.PigFarmMgr;
}

<br />
<ol class="breadcrumb">
  <li class=""><a href="@Url.Action("Index","Main",new { area = "" })">@IMS.Resources.Resource.MenuHome</a></li>
  <li class=""><a href="@Url.Action("Index","Home",new { area = "Sys" })">@IMS.Resources.Resource.MenuSys</a></li>
  <li class="active">@IMS.Resources.Resource.PigFarmMgr</li>
</ol>

<h2>@IMS.Resources.Resource.PigFarmMgr</h2>
<hr />
<div class="panel panel-default">
    <!-- Default panel contents -->

    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="row form-group">

                <div class="col-sm-2">
                    <label class="control-label" for="SearchString">關鍵字</label>
                    <input class="form-control" id="SearchString" name="SearchString" value=@ViewBag.CurrentFilter>
                </div>
                <div class="col-sm-10 ">
                    <br />
                    <input type="submit" value=@IMS.Resources.Resource.Comm_Search class="btn btn-success" />
                    @*@Html.ActionLink(IMS.Resources.Resource.Comm_Search, "Search", "", new { Class = "btn btn-success" })*@
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Add, "Create", "", new { Class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
    @{
        var PigFarmName = Html.DisplayNameFor(model => model.FirstOrDefault().Name);
        var CreateDate = Html.DisplayNameFor(model => model.FirstOrDefault().CreDate);
    }
    <!-- Table -->
    <table class="table table-striped">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                @Html.ActionLink(PigFarmName.ToString(), "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CreUser)
            </th>
            <th>
                @Html.ActionLink(CreateDate.ToString(), "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreDate)
                </td>

                <td>
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Edit, "Edit", new { id = item.Id }, new { Class = "btn btn-success" }) |
                    @*@Html.ActionLink(IMS.Resources.Resource.Comm_Details, "Details", new { id=item.ID }, new { Class = "btn btn-info" }) |*@
                    @Html.ActionLink(IMS.Resources.Resource.Comm_Delete, "Delete", new { id = item.Id }, new { onclick = "return confirm('確定要刪除嗎??')", Class = "btn btn-danger" })
                </td>
            </tr>
        }


    </table>


    @if (Model.Count() < 1)
    {
        <div class="well well-sm" style="width:100%">
            <p class="text-center text-warning">查無資料</p>
        </div>
    }


    <br />
    <div class="text-center">
    @*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>